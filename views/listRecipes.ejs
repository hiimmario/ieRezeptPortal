<% include partials/header %>

<h3>
    All Recipes
</h3>
<br>
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Recipe Title</th>
        <th scope="col">Description</th>
        <th scope="col">Created Date</th>
        <th scope="col">Created by User</th>
        <th scope="col">Count "YUMMMIES"</th>
    </tr>

    </thead>
    <% recipes.forEach(function(recipe) { %>
        <tr>
            <td><a class="header" href="/showRecipe/<%= recipe._id %>"><%= recipe.title %></a></td>
            <td><%= recipe.text %></td>
            <td><%= recipe.created.toLocaleDateString("de-DE") %></td>
            <td><%= recipe.author.username %></td>
            <td><%= recipe.votes.length %></td>
        </tr>
    <% }); %>
</table>

<% include partials/footer %>
